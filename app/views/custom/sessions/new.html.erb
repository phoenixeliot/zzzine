  <h2>Create your ZZZINE with one click</h2>

  <a class="btn-large" href="/users/auth/twitter">Sign in with Twitter</a>
  <br>
  <br>
  <div class="preview">
    Hot off the press...
    <ul>
      <% @last_users.each do |user| %>
        <% half = rand(2) %>
        <% if half == 0 %>
          <% @side1, @side2 = "left", "right" %>
        <% else %>
          <% @side1, @side2 = "right", "left" %>
        <% end %>
        <a class="previewLink" href="/view/<%= user.uid %>">
          <li class="previewEntry">
            <img style="float:<%= @side1%>" class="previewImage" src='<%= user.tweets.first.gif.url %>'>
            <div style="<%= @side2%>: 0" class="previewSummary">
              <a style="color: black" href="http://twitter.com/<%= user.uid %>" target="_blank">@<%= user.uid %></a>
              <%= user.tweets.first.content unless user.nil? %>
            </div>     
            <% user.style_id unless user.nil? %>
          
          </li>
        </a>
      <% end %>

    </ul>
  </div>
  <div class="site-credits">
